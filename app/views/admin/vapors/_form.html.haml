.vapor_new
  = form_for [:admin, @vapor], html: { class: 'form-horizontal' } do |f|
    -if @vapor.errors.any?
      #error_explanation
        %ul.unstyled.alert.alert-danger
          - @vapor.errors.full_messages.each do |msg|
            %li= msg
    %fieldset
      %legend Vapors
      .form-group
        = f.label :path, class: 'control-label'
        .col-sm-10
          = f.text_field :path, required: true, autocomplete: "off", class: 'form-control'
          %span.help-inline * required
      .form-group
        = f.label :tier, class: 'control-label'
        .col-sm-10
          = f.select :tier, ((1..3).map {|i| [i,i] })
          %span.help-inline * required
      .form-group
        = f.label :default, class: 'control-label'
        .col-sm-10
          = f.check_box :default, {checked: @vapor.default}
          %span.help-inline * required

    .form-actions
      - if @vapor.new_record?
        = f.submit 'Create vapor', class: "btn btn-create"
        = link_to 'Cancel', admin_vapors_path, class: "btn btn-cancel"
      - else
        = f.submit 'Save changes', class: "btn btn-save"
        = link_to 'Cancel', admin_vapor_path(@vapor), class: "btn btn-cancel"
